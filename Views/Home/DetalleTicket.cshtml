
@{
    ViewData["Title"] = "Gestión del Ticket";
}

<style>
    :root {
        --primary-color: #4267B2;
        --primary-light: rgba(66, 103, 178, 0.2);
    }

    .bg-primary-light {
        background-color: var(--primary-light);
    }

    .text-primary-custom {
        color: var(--primary-color);
    }

    .btn-primary-custom {
        background-color: var(--primary-color);
        color: white;
    }

    .btn-primary-custom:hover {
        background-color: #365899;
    }

    .priority-dot {
        height: 12px;
        width: 12px;
        border-radius: 50%;
        display: inline-block;
        margin-right: 8px;
    }

    .dot-low { background-color: green; }
    .dot-medium { background-color: orange; }
    .dot-high { background-color: red; }

    .ticket-arrow {
        font-size: 32px; 
        font-weight: bold;
        color: #333;
        display: inline-block;
        position: relative;
        top: -13px;
    }

    .ticket-arrow::before {
        content: '‹';
    }
</style>

<div class="container-fluid p-4">
    <div class="card shadow-sm">
        <div class="row g-0">
            <!-- Panel Izquierdo -->
            <div class="col-md-2 p-3 border-end bg-primary-light">
                <a asp-controller="Home" asp-action="Index" class="ticket-arrow text-decoration-none mt-2 mb-3"></a>

                <p class="mt-4"><strong>ID del ticket</strong><br />0</p>
                <p><strong>Creado por</strong><br />Usuario</p>
                <p><strong>Fecha de creación</strong><br />00/00/00</p>
            </div>

            <!-- Panel Derecho -->
            <div class="col-md-8 p-4"> 
                <h5 class="mb-4 text-primary-custom">Gestionar ticket</h5>

                <div class="mb-3">
                    <label class="form-label">Título</label>
                    <input type="text" class="form-control" />
                </div>

                <div class="mb-3">
                    <label class="form-label">Descripción</label>
                    <textarea class="form-control" rows="2"></textarea>
                </div>

                <div class="mb-3">
                    <label class="form-label">Asignado a</label>
                    <input type="text" class="form-control" placeholder="Ingrese trabajador a buscar" translate="no"/>
                </div>

                <div class="mb-4"> 
                    <label class="form-label">Prioridad</label>
                    <select class="form-select">
                        <option selected disabled>Seleccione prioridad</option>
                        <option>Baja</option>
                        <option>Media</option>
                        <option>Alta</option>
                    </select>
                </div>

                <div class="d-grid">
                    <button class="btn btn-primary-custom">Guardar</button>
                </div>
            </div>
        </div>
    </div>
</div>
