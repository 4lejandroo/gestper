
@{
    ViewData["Title"] = "Detalles del Ticket";
}

<style>
    :root {
        --primary-color: #4267B2;
        --primary-light: rgba(66, 103, 178, 0.2);
    }

    .bg-primary-light {
        background-color: var(--primary-light);
    }

    .text-primary-custom {
        color: var(--primary-color);
    }

    .btn-primary-custom {
        background-color: var(--primary-color);
        color: white;
    }

    .btn-primary-custom:hover {
        background-color: #365899;
    }

    .priority-dot {
        height: 12px;
        width: 12px;
        border-radius: 50%;
        display: inline-block;
        margin-right: 8px;
    }

    .dot-low { background-color: green; }
    .dot-medium { background-color: orange; }
    .dot-high { background-color: red; }

    /* Clase agregada como en Index_Trabajador.cshtml */
    .ticket-arrow {
        font-size: 24px;
        font-weight: bold;
        color: #333;
        display: inline-block;
        margin-bottom: 16px;
    }

    .ticket-arrow::before {
        content: '‹'; 
        margin-right: 6px;
    }
</style>

<div class="container-fluid p-4" style="max-width: 100%px;">
    <div class="card shadow-sm">
        <div class="row g-0">
            <!-- Panel Izquierdo -->
            <div class="col-md-4 p-3 border-end bg-primary-light">
                <a asp-controller="Home" asp-action="Index" class="ticket-arrow text-decoration-none mt-2 mb-3"></a>

                
                <p class="mt-4"><strong>Ticket ID</strong><br />0</p>
                <p><strong>Creado por</strong><br />Usuario</p>
                <p><strong>Fecha de creación</strong><br />00/00/00</p>
            </div>

            <!-- Panel Derecho -->
            <div class="col-md-8 p-4">
                <h5 class="mb-4 text-primary-custom">Detalles del ticket</h5>

                <div class="mb-3">
                    <label class="form-label">Título</label>
                    <input type="text" class="form-control" />
                </div>

                <div class="mb-3">
                    <label class="form-label">Descripción</label>
                    <textarea class="form-control" rows="2"></textarea>
                </div>

                <!-- Asignado a (solo lectura) -->
                <div class="mb-3">
                    <label class="form-label">Asignado a</label>
                    <input type="text" class="form-control" value="Un Trabajador x" readonly />
                </div>

                <!-- Prioridad (solo lectura) -->
                <div class="mb-3">
                    <label class="form-label">Prioridad</label>
                    <input type="text" class="form-control" value="Una Prioridad x" readonly />
                </div>

                <!-- Estado -->
                <div class="mb-3">
                    <label class="form-label">Estado</label>
                    <select class="form-select">
                        <option>Pendiente</option>
                        <option>En proceso</option>
                        <option>Terminado</option>
                    </select>
                </div>

                <!-- Respuesta -->
                <div class="mb-3">
                    <label class="form-label">Respuesta</label>
                    <textarea class="form-control" rows="2"></textarea>
                </div>

                <div class="mb-3">
                    <button class="btn btn-primary-custom">
                        <i class="bi bi-upload"></i> Subir archivo
                    </button>
                </div>

                <div class="d-grid">
                    <button class="btn btn-primary-custom">Guardar</button>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            $('#trabajador-select').select2({
                placeholder: "Buscar trabajador...",
                width: '100%'
            });
        });
    </script>
}
