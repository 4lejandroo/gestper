@model Gestper.Models.Usuario
@{
    ViewData["Title"] = "Mi Perfil";
    Layout = "_Layout"; // Asegúrate de que este sea el nombre correcto de tu layout
}

<div class="container my-4">
    <div class="row">
        <div class="col-12 mb-4">
            <h1 class="text-primary">Mi Perfil</h1>
        </div>
    </div>

    <div class="row">
        <!-- Tarjeta de perfil -->
        <div class="col-md-6 mx-auto">
            <div class="card">
                <div class="card-header bg-primary text-white">
                    <h2 class="card-title">Información Personal</h2>
                </div>
                <div class="card-body">
                    <div class="text-center mb-4">
                        <img src="~/images/profile-placeholder.png" alt="Foto de perfil" class="rounded-circle" style="width: 150px; height: 150px; object-fit: cover;" />
                        <h3 class="mt-3">@Model.Nombre @Model.Apellido</h3>
                        <p>
                            @if (Model.Activo)
                            {
                                <span class="badge bg-success">Activo</span>
                            }
                            else
                            {
                                <span class="badge bg-danger">Inactivo</span>
                            }
                        </p>
                    </div>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <h5>Nombre</h5>
                            <p>@Model.Nombre</p>
                        </div>
                        <div class="col-md-6 mb-3">
                            <h5>Apellido</h5>
                            <p>@Model.Apellido</p>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <h5>Correo Electrónico</h5>
                            <p><i class="bi bi-envelope me-2"></i>@Model.Correo</p>
                        </div>
                        <div class="col-md-6 mb-3">
                            <h5>Teléfono</h5>
                            <p><i class="bi bi-telephone me-2"></i>@Model.Telefono</p>
                        </div>
                    </div>

                    <div class="text-center mt-3">
                        <a href="@Url.Action("Index", "Home")" class="btn btn-outline-primary">Volver al Inicio</a>
                        <a class="btn btn-primary" href="/Perfil/Editar">Editar Perfil</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>