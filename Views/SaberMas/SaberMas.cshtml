@{
    ViewBag.Title = "SaberMás";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card shadow-lg border-0 rounded-lg mb-5">
                <div class="card-header bg-primary text-white">
                    <h2 class="text-center font-weight-bold my-3">GESTPER</h2>
                </div>
                <div class="card-body p-4 text-black"> <!-- Añadido text-black -->
                    <div class="text-center mb-4">
                        <span class="badge bg-primary p-2 mb-3">Soluciones Empresariales</span>
                    </div>
                    
                    <p class="lead text-center mb-4">
                        <strong class="text-primary">GESTPER</strong> es más que una TI, 
                        conlleva una asesoría y consultoría para 
                        generar soluciones que apoyen la toma de 
                        decisiones empresariales en 
                        tiempo real, adaptándose a la 
                        estructura organizacional de la 
                        empresa, con 
                        rapidez.
                    </p>
                    
                    <hr class="my-4">
                    
                    <p class="lead text-center">
                        <strong class="text-primary">GESTPER</strong>, mediante la 
                        digitalización de todos los 
                        procesos en la gestión de 
                        recursos humanos, permite la 
                        integración de la 
                        estructura organizacional en forma transversal.
                    </p>
                    
                    <div class="text-center mt-4">
                        <a href="@Url.Action("Index", controller: "Home")" class="btn btn-primary btn-lg px-4 shadow-sm">
                            <i class="bi bi-house-door me-2"></i>Volver al inicio
                        </a>
                    </div>
                </div>
                <div class="card-footer text-center py-3 bg-light">
                    <small class="text-muted">© @DateTime.Now.Year - GESTPER - Soluciones empresariales</small>
                </div>
            </div>
        </div>
    </div>
</div>
