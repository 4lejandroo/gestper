@model IEnumerable<Gestper.Models.Ticket>

@{
    
    ViewData["Title"] = "Tickets";
}

<h1>Listado de Tickets</h1>

<div class="container mt-4">
    <div class="card shadow-lg rounded-3">
        <div class="card-header bg-primary text-white">
            <h2 class="mb-0">Tickets</h2>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered table-striped">
                    <thead>
                        <tr>
                            <th>Título</th>
                            <th>Descripción</th>
                            <th>Estado</th>
                            <th>Categoría</th>
                            <th>Prioridad</th>
                            <th>Departamento</th>
                            <th>Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var Ticket in Model)
                        {
                            <tr>
                                <td>@Ticket.Titulo</td>
                                <td>@Ticket.Descripcion</td>
                                <td>@Ticket.Estados?.NombreEstados</td>  
                                <td>@Ticket.Categorias?.Nombre</td>  
                                <td>@Ticket.Prioridades?.NombrePrioridad</td>  
                                <td>@Ticket.Departamentos?.Nombre</td>  
                                <td>
                                    <a asp-action="Edit" asp-route-id="@Ticket.IdTicket" class="btn btn-warning btn-sm">Editar</a>
                                    <a asp-action="Delete" asp-route-id="@Ticket.IdTicket" class="btn btn-danger btn-sm">Eliminar</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
        <div class="card-footer">
            <a asp-action="Create" class="btn btn-success">Crear Nuevo Ticket</a>
        </div>
    </div>
</div>
